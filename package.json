{
  "name": "voxel-worlds",
  "version": "0.1.0",
  "private": true,
  "description": "Voxel Worlds monorepo bootstrap aligned to MVP PRD",
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=20.11.0"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
